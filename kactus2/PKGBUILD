pkgname=kactus2
pkgver=2.6.0
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc='Graphical IP-XACT toolset for embedded products design'
url='http://funbase.cs.tut.fi/index.php/Kactus2'
license=('GPL')
depends=('qt5-base>=5.1.0' 'qt5-tools>=5.1.0')
#install=kactus2.install
source=(http://downloads.sourceforge.net/project/$pkgname/$pkgname-$pkgver.tar.gz)
sha256sums=('648386bf54f852c798f69ff1a21498fa295ff2edc4ac9f80c2335b3212ef60dd')



build() {
#	for f in *.patch; do patch -p0 -i $f; done
 
	cd $pkgname-$pkgver
	qmake-qt5 Kactus2_Solution.pro
	make
}

package() {
	cd $pkgname-$pkgver
	make INSTALL_ROOT="$pkgdir" install
}
